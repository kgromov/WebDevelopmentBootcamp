<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listName %> <a href="/" class="button">Back to Lists</a></h1>
    </div>

    <div class="box">
        <% items.forEach(item => { %>
            <form action="/delete/<%= listName %>/<%= item._id %>" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>            
        <% }) %>

        <form class="item" action="/<%= listName %>" method="post">
            <input type="text" name="itemName" placeholder="New item" autocomplete="off">
            <button type="submit" name="listName" value="<%= listName %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
